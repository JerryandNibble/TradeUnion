
@{
    ViewBag.Title = "ScanUnionAnnounIndex";
    Layout = "~/Views/Shared/_UnionLeft.cshtml";
}

<div class="col-md-11 well admin-content">
    <fieldset>
        <legend class="text-center">查看工会最新公告</legend>
        <div class="container">
            <div class="row col-md-6 custyle">
                <table class="table table-striped custab">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>架构标题</th>
                            <th>发布人</th>
                            <th>内容</th>
                            <th class="text-center">操作</th>
                        </tr>
                    </thead>
                    @{
                        foreach (var item in ViewBag.List)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.MingCheng</td>
                                <td>@item.FabuRen</td>
                                @*<td>@item.JieShao</td>*@
                                <td><a href="/UnionInfor/FullAnnounContents?Id=@item.ID">查看详情</a></td>
                                <td class="text-center">
                                    <a href="/UnionInfor/EditUnionAnnounIndex?Id=@item.ID" class='btn btn-info btn-xs'><span class="glyphicon glyphicon-edit"></span>编辑</a>
                                    <a href="/UnionInfor/DelGongGaoMSG?Id=@item.ID" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span>删除</a>
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>
        </div>
    </fieldset>
</div>

