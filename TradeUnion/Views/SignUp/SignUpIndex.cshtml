@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title>工会日常工作管理系统-用户注册</title>
</head>
<body >
    
    
    
    
    

    <form action="/SignUp/AddNewAccountAction" method="post">@* SignUp:控制器名字 SignUpAction:控制器方法 *@
        <div class="container">
            <div class="jumbotron">
                <h1>Register with us and rent online</h1>
                <div class="row">
                    <div class="col-md-6">
                        <div>Become a seller</div>
                        <ul class="list-unstyled" style="line-height: 2">
                            <li><span class="glyphicon glyphicon-ok"></span> See all your orders</li>
                            <li><span class="glyphicon glyphicon-ok"></span> Fast re-order</li>
                            <li><span class="glyphicon glyphicon-ok"></span> Save your favorites</li>
                            <li><span class="glyphicon glyphicon-ok"></span> Fast checkout</li>
                            <li><span class="glyphicon glyphicon-ok"></span> Get a gift <small>(only new customers)</small></li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <form>

                            <div class="form-group">
                                <label>登录名</label>
                                @*<span class="input-group-addon"><i class="fa fa-user fa " aria-hidden="true"></i></span>*@
                                <input name="UserName" type="text" class="form-control" placeholder="输入您的登录名">
                              </div>
             

                            <div class="form-group">
                                <label>密码</label>
                                <input name="PassWord" type="password" class="form-control" placeholder="填写密码">
                            </div>

                            <div class="form-group">
                                <label for="confirmPassword">确认密码</label>
                                <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password">
                            </div>

                            <button type="submit" class="btn btn-primary btn-lg">登录</button>
                            <button type="reset" class="btn btn-warning  btn-lg">重置</button>

                        </form>
                    </div>

                </div>
            </div>
        </div>

    </form>

    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>



























</body>
</html>
