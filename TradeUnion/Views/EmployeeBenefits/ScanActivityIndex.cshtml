
@{
    ViewBag.Title = "ScanActivityIndex";
    Layout = "~/Views/Shared/_UnionLeft.cshtml";
}

<div class="col-md-11 well admin-content">
    <fieldset>
        <legend class="text-center">浏览文体活动通知</legend>
        <div class="container">
            <div class="row col-md-6 custyle">
                <table class="table table-striped custab">
                    <thead>
                        <tr>
                            <th>活动名称</th>
                            <th>发起人</th>
                            <th>活动介绍</th>
                            <th>时间</th>
                            <th class="text-center">操作</th>
                        </tr>
                    </thead>
                    @{
                        foreach (var item in ViewBag.List)
                        {
                            <tr>
                                <td>@item.ActMingCheng</td>
                                <td>@item.FaBuRen</td>
                                <td>@item.JieShao</td>
                                <td>@item.ShiJian</td>
                                <td class="text-center">
                                    <a class='btn btn-info btn-xs' href="#"><span class="glyphicon glyphicon-edit"></span> 编辑</a>
                                    <a href="#" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> 删除</a>
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>
        </div>
    </fieldset>
</div>


