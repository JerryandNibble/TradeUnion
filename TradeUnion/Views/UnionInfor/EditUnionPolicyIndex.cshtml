
@{
    ViewBag.Title = "EditUnionPolicyIndex";
    Layout = "~/Views/Shared/_UnionLeft.cshtml";
}

<div class="col-md-11 well admin-content" id="Policy">
    <form class="form-horizontal" action="/UnionInfor/EditPolicyMSG" method="get">
        <fieldset>
            <!-- Form Name -->
            <legend class="text-center">编辑工会政策法规</legend>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label">法规标题</label>
                <div class="col-md-6">
                   <input type="hidden" name="isEdit" value="@ViewBag.isEdit" />  @*@Html.TextBox("MingCheng")*@
                   <input name="MingCheng" value="@ViewData["MingCheng"]" id="MingCheng" type="text" class="form-control input-md" />
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label">发布人</label>
                <div class="col-md-4">
                    <input name="FabuRen" id="FabuRen" type="text"  class="form-control input-md"  value="@ViewData["FabuRen"]" required="" />
                    <input name="ID" id="ID" type="hidden" value="@ViewData["ID"]"/>
                    <span class="help-block">此处编辑发布人姓名</span>
                </div>
            </div>

            <!-- Textarea -->
            <div class="form-group">
                <label class="col-md-4 control-label">架构内容</label>
                <div class="col-md-8">
                    <textarea  class="form-control" name="JieShao" id="JieShao">@ViewData["JieShao"]</textarea>
                </div>
            </div>

            <input name="ShiJian" style="display:none" />

            <!-- Button (Double) -->
            <div class="form-group">
                <label class="col-md-4 control-label">选择</label>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-info">确定</button>
                    <button type="reset" class="btn btn-warning">重置</button>
                </div>
            </div>


        </fieldset>
    </form>
</div>